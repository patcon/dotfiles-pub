[user]
	name = Patrick Connolly
	email = patrick@myplanetdigital.com

[core]
	quotepath = false

[color]
	ui = auto

[alias]
	st = status
	ci = commit
	co = checkout
	di = diff
	diw = diff --ignore-all-space
	dc = diff --cached
	dcw = diff --cached --ignore-all-space
	amend = commit --amend
	aa = add --all
	head = !git l -1
	h = !git head
	r = !git --no-pager l -10
	ra = !git r --all
	ff = merge --ff-only
	pullff = pull --ff-only
	l = log --graph --abbrev-commit --date=relative
	la = !git l --all
	div = divergence
	gn = goodness
	gnc = goodness --cached
	fa = fetch --all
	pom = push origin master
	flow = !gitflow

[format]
	pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[github]
	user = patcon
