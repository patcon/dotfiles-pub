[user]
	name = Patrick Connolly
	email = patrick@myplanetdigital.com

[core]
	quotepath = false
	excludesfile = /Users/homebase/.gitignore_global
  editor = vim

[color]
	ui = auto
	branch = auto
	diff = auto
	interactive = auto
	status = auto

[alias]
	st = status --porcelain
	ci = commit
	co = checkout
	di = diff
	diw = diff --ignore-all-space
	dc = diff --cached
	dcw = diff --cached --ignore-all-space
	amend = commit --amend
	aa = add --all
	head = !git l -1
	h = !git head
	r = !git --no-pager l -10
	ra = !git r --all
	ff = merge --ff-only
	pullff = pull --ff-only
	l = log --graph --abbrev-commit --date=relative
	la = !git l --all
	div = divergence
	gn = goodness
	gnc = goodness --cached
	fa = fetch --all
	pom = push origin master
	flow = !gitflow
	br = branch
	sta = stash
	llog = log --date=local
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"

[format]
	pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[github]
	user = patcon
[apply]
	whitespace = nowarn
[branch]
	autosetupmerge = true
[push]
	default = simple
